<header>
    <h1>
        {{#link-to 'index'}}Donate STL{{/link-to}}
    </h1>
    {{input class="primary-search" type="search" value=searchQuery placeholder="Search all solicitations"}}
    <nav>
        <ul>
            {{#if user.isLoggedIn}}
                <li>
                    <button {{action 'logout'}}>Log Out</button>
                </li>
                <li>
                    {{#link-to 'user.edit' user}}Account{{/link-to}}
                </li>
            {{else}}
                <li>
                    <button {{action 'login'}}>Log In</button>
                </li>
                <li>
                    {{#link-to 'users.new'}}Sign Up{{/link-to}}
                </li>
            {{/if}}
        </ul>
    </nav>
</header>

{{outlet}}
